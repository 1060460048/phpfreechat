#!/bin/sh

echo "-- creating archive --"
echo "-> copying files"
rm -rf phpfreechat
svn export .. ./phpfreechat
echo "-> creating .tar.gz"
tar czfp phpfreechat-`cat ../version`.tar.gz phpfreechat/ 
echo "-> creating .zip"
zip -Tq9r phpfreechat-`cat ../version`.zip phpfreechat/
echo "-> removing temporary files"
rm -rf phpfreechat
echo "-- creating archive, done --"
